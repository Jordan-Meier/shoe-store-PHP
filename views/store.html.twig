<html>
<head>
    <title>Shoes</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
</head>
<body>
    <div class='container-fluid text-center jumbotron'>
        <h1>Portland's Shoe Catalog</h1>
    </div>
    <div class='container'>
        <h1>{{ store.getStoreName }}</h1>
        <h3>{{ store.getLocation }}</h3>

        {% if brands is not empty %}
            <p>Here are all Brands this Store carries:</p>
            <ul>
                {% for brand in brands %}
                    <li>{{ brand.getName }}</li>
                {% endfor %}
            </ul>
            {% else %}
                <div class="well">
                    <h3>Oops! No brands have been added to this store yet.</h3>
                </div>
        {% endif %}

        <h4>Add a Brand to this Store:</h4>

        <form action='/add_brands' method='post'>
            <input id='store_id' name='store_id' type='hidden' value='{{ store.getId }}'>
            <label for='brand_id'>Select a Brand</label>
            <select id='brand_id' name='brand_id' type='text'>
                {% for brand in all_brands %}
                    <option value='{{ brand.getId }}'>{{ brand.getName }}</option>
                {% endfor %}
            </select>
            <button type='submit'>Add Brand</button>
        </form>
        <p><a href='/store/{{ store.getId }}/edit'>Edit this Store</a></p>
        <p><a href='/stores'>Return to Stores</a></p>
        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
