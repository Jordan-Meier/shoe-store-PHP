<html>
<head>
    <title>Shoes</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
</head>
<body>
    <div class='container-fluid text-center jumbotron'>
        <h1>Portland's Shoe Catalog</h1>
    </div>
    <div class='container'>
        <h1>Brands</h1>

        {% if brands is not empty %}
            <p>Here are all of the brands in our database:</p>
            <ol>
                {% for brand in brands %}
                    <li><a href='/brands/{{ brand.getId }}'> {{ brand.getName }} </a></li>
                {% endfor %}
            </ol>
        {% endif %}

        <form action='/brands' method='post'>
            <label for='name'>Brand Name: </label>
            <input id='name' name='name' type='text'>

            <button type='submit'>Add Brand</button>
        </form>
        <form action='/delete_brands' method='post'>
            <button type='submit'>Delete ALL brands</button>
        </form>
        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
